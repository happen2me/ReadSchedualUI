/* pages/plans/plans.wxss */

.card {
  width: 670rpx;
  height: 300rpx;
  background: transparent;
  left: 0;
  right: 0;
  margin: auto;
  margin-bottom: 30rpx;
  top: 0;
  bottom: 0;
  border-radius: 7rpx;
  -webkit-border-radius: 7rpx;
  -moz-border-radius: 7rpx;
  box-shadow: 0px 6rpx 3rpx 2px rgba(0, 0, 0, 0.25);
}
.card_left {
  width: 40%;
  height: 300rpx;
  float: left;
  overflow: hidden;
  background: transparent;
}
.card_left .book_cover {
  width: 100%; 
  height: 100%;
  border-radius: 7rpx 0 0 7rpx;
  position: relative;
}
.card_right {
  width: 60%;
  float: left;
  background: #000;
  height: 300rpx;
  border-radius: 0 7rpx 7rpx 0;
  -webkit-border-radius: 0 7rpx 7rpx 0;
  -moz-border-radius: 0 7rpx 7rpx 0;
}
.card_right .h1 {
  color: white;
  font-family: 'Montserrat', sans-serif;
  font-weight: 400;
  text-align: left;
  font-size: 40rpx;
  margin: 20rpx 0 0 0;
  padding: 0 0 0 40rpx;
  letter-spacing: 1px;
}
.card_right__details .ul {
  list-style-type: none;
  padding: 0 0 0 40rpx;
  margin: 7rpx 0 0 0;
}
.card_right__details .ul .li {
  display: inline;
  color: #e3e3e3;
  font-family: 'Montserrat', sans-serif;
  font-weight: 400;
  font-size: 20rpx;
  padding: 0 40rpx 0 0;
}
.card_right__rating__stars {
  position: relative;
  right: 120rpx;
  margin: 7rpx 0 7rpx 0;
  /***** CSS Magic to Highlight Stars on Hover *****/
  /* hover previous stars in list */
}
.card_right__rating__stars fieldset, .card_right__rating__stars label {
  margin: 0;
  padding: 0;
}
.card_right__rating__stars .rating {
  border: none;
}
.card_right__rating__stars .rating > input {
  display: none;
}
.card_right__rating__stars .rating > label:before {
  margin: 5px;
  font-size: 1.25em;
  display: inline-block;
  content: "\f005";
  font-family: FontAwesome;
}
.card_right__rating__stars .rating > .half:before {
  content: "\f089";
  position: absolute;
}
.card_right__rating__stars .rating > label {
  color: #ddd;
  float: right;
}
.card_right__review .p {
  color: white;
  font-family: 'Montserrat', sans-serif;
  font-size: 12rpx;
  padding: 0 40rpx 0 40rpx;
  letter-spacing: 1rpx;
  margin: 7rpx 0 7rpx 0;
  line-height: 15rpx;
}
.card_right__review a {
  text-decoration: none;
  font-family: 'Montserrat', sans-serif;
  font-size: 9rpx;
  padding: 0 0 0 40px;
  color: #ffda00;
  margin: 0;
}
.card_right__button {
  padding: 0 0 0 40px;
  margin: 20rpx 0 0 0;
}
.card_right__button a {
  color: #ffda00;
  text-decoration: none;
  font-family: 'Montserrat', sans-serif;
  border: 2px solid #ffda00;
  padding: 7rpx 7rpx 7rpx 40px;
  font-size: 12px;
  background: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/343086/COMdoWZ.png);
  background-size: 12px 12px;
  background-repeat: no-repeat;
  background-position: 7% 50%;
  border-radius: 5px;
  -webkit-transition-property: all;
  transition-property: all;
  -webkit-transition-duration: 0.5s;
  transition-duration: 0.5s;
}
.card_right__button a:hover {
  color: #000;
  background-color: #ffda00;
  background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/343086/rFQ5dHA.png);
  background-size: 12px 12px;
  background-repeat: no-repeat;
  background-position: 10% 50%;
  cursor: pointer;
  -webkit-transition-property: all;
  transition-property: all;
  -webkit-transition-duration: 0.5s;
  transition-duration: 0.5s;
}