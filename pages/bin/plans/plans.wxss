/* pages/plans/plans.wxss */

.card {
  width: 670rpx;
  height: 300rpx;
  background: transparent;
  background-color: cornflowerblue;
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  top: 0;
  bottom: 0;
  border-radius: 7rpx;
  -webkit-border-radius: 7rpx;
  -moz-border-radius: 7rpx;
  box-shadow: 0px 6rpx 3rpx 2px rgba(0, 0, 0, 0.25);
}
.card_right {
  width: 5%;
  height: 300rpx;
  float: right;
  overflow: hidden;
  background: transparent;
}
.card_right .book_cover {
  width: 100%; 
  height: 100%;
  border-radius: 7rpx 0 0 7rpx;
  position: relative;
}
.card_left {
  width: 95%;
  float: left;
  margin-top: 50rpx;
  border-radius: 0 7rpx 7rpx 0;
}
.card_left .h1 {
  display: flex;
  color: white;
  font-family: "黑体";
  font-size: 1.1em;
  text-align: left;
  margin: 20rpx 0 0 0;
  padding: 0 0 0 40rpx;
}
.card_left .h2 {
  display: flex;
  color: white;
  font-size: 0.9em;
  text-align: left;
  margin: 20rpx 0 0 0;
  padding: 0 0 0 40rpx;
}
.card_left .h3 {
  display: flex;
  color: white;
  font-size: 0.7em;
  text-align: left;
  margin: 20rpx 0 0 0;
  padding: 0 0 0 40rpx;
}